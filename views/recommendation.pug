extends layout.pug
    
block content
    div.topbar
        h1 Recommendations

    table 
      each t in tracks
          - var artist_name = t.artists[0].name
          - var track_name = t.name
          - var track_preview = t.preview_url
          - var track_cover = t.album.images[1].url

          div.cell
            img(src=track_cover).cover_img
            div.cell_text
                h4 #{artist_name}
                h3 #{track_name}
                p
                    a(href=track_preview) Preview